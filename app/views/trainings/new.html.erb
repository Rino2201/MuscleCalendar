<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="text-center">トレーニング記録</h2>
        <%= form_with model: @training, local: true do |f| %>
          <div class="form_input">
            <%= f.collection_select :menu_id, Menu.all, :id, :menu_name, options = { include_blank: true }, class: "form-control" %>
            <%= f.label :重量kg %>
            <%= f.text_field :weight, class: "form-control" %>
            <%= f.label :回数 %>
            <%= f.text_field :rep, class: "form-control" %>
            <%= f.label :セット数 %>
            <%= f.text_field :set, class: "form-control" %>
            <%= f.submit "投稿する", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>