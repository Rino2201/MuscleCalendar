<div class="container">
  <div class="row">
    <div class="">
      <h1><%= @user.name %>のマイページ</h1>
      <table class='table'>
        <tr>
      	  <th>ユーザーネーム:</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>自己紹介:</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
        <tr>
          <th>フォロー</th>
          <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
        </tr>
        <tr>
          <th>フォロワー</th>
          <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
        </tr>
      </table>
      <div class=''>
        <% if current_user != @user %>
          <td><%= render "follows/btn", user: @user %></td>
        <% else %>
          <%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-success" %>
          <%= link_to '設定', edit_user_registration_path(@user), class: "btn btn-success" %>
          <% end %>
      </div>

      <% @tweets.each do |tweet| %>
        <div>
          <%= tweet.created_at.strftime('%Y/%m/%d %H:%M') %>
          <%= link_to tweet_path(tweet.id) do %>
            <p><%= tweet.text %></p>
          <% end %>
          <p>
            <%= attachment_image_tag tweet, :image, format: 'jpeg', size: '100x100' %>
          </p>
          <p>
            <%= link_to "#{tweet.comments.count} コメント", tweet_path(tweet.id) %>
          </p>
          <% if @user == current_user %>
            <%= link_to '編集', edit_tweet_path(tweet), class: "btn btn-success" %>
          <% end %>
          <% if @user == current_user %>
            <%= link_to "削除", tweet_path(tweet), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
