<div class="container">
  <div class="row">
    <div>
      <%= form_with model:@tweet, local:true do |f| %>
        <div class="form-group">
          <%= f.label :投稿内容 %>
          <%= f.text_area :text, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
